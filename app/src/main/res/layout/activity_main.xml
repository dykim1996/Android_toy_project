<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">


    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:textStyle=""
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="150dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:textColor="#F1F1F1"/>

<!--    android:background="?android:attr/selectableItemBackground"-->
    <EditText
            android:background="@drawable/btn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="이메일을 입력하세요"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/email"
            android:drawableLeft="@drawable/member"
            android:drawableTint="@color/white"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="50dp"
            android:textColor="#FAFAFA" android:textColorHint="#FFFEFE"
            android:textColorLink="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_in"/>
    <EditText
            android:background="@drawable/btn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="암호를 입력하세요"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/lock"
            android:padding="10dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:textColor="#FAFAFA"
            android:textColorHint="#FFFEFE"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_in"/>

    <Button
            android:text="로그인"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:id="@+id/btnLogin"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginStart="84dp"
            android:backgroundTint="#306839"
            android:textSize="16sp"/>
    <TextView
            android:text=" 아직 회원이 아니시라면?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="16sp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/join" app:layout_constraintHorizontal_bias="0.763"
            android:textColorHint="#FFFFFF" android:textAllCaps="false" android:textColor="#FFFFFF"/>
    <TextView
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/join"
            android:textSize="18sp" android:textColor="#03A9F4"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>