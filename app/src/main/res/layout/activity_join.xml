<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".JoinActivity">


    <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="이메일을 입력하세요"
            android:gravity="center"
            android:drawableTint="@color/white"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/member"
            android:ems="10"
            android:id="@+id/email"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:textColor="#FFFFFF" android:textColorHint="#FFFFFF" android:layout_marginTop="28dp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="암호를 입력하세요"
            android:gravity="center"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/lock"
            android:padding="10dp"
            android:drawableTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>
    <Button
            android:text="취소"
            android:backgroundTint="#306839"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancle"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginTop="68dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="92dp"/>
    <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnJoin"
            android:backgroundTint="#306839"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="68dp"
            android:layout_marginStart="88dp"
            app:layout_constraintEnd_toStartOf="@+id/btnCancle"
            app:layout_constraintHorizontal_bias="0.24"/>
    <ImageView
            android:layout_width="237dp"
            android:layout_height="155dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="120dp"
            app:layout_constraintHorizontal_bias="0.49"/>

</androidx.constraintlayout.widget.ConstraintLayout>