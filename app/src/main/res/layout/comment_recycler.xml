<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNo"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="코멘트 내용"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:id="@+id/textContent"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/textNo"/>
    <TextView
            android:text="2022/10/25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDatetime"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deleteButton"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/textContent"
            />
    <Button
            android:text="삭제"
            android:textSize="8sp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/deleteButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="82dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#EA3838"
    />
</androidx.constraintlayout.widget.ConstraintLayout>